<!-- This is a primitive example showing the different types of preferences available. -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">    
    <PreferenceCategory android:title="Courses and Units">
        <PreferenceScreen
                android:title="Add Courses and Units"
                android:summary="Edit the topic categories to display">
            <intent 
                android:action="android.intent.action.VIEW"
                android:targetPackage="com.ex.ntv"
                android:targetClass="com.ex.ntv.src.EditTopicsActivity"/>
        </PreferenceScreen>
    </PreferenceCategory>
    <PreferenceCategory android:title="Share Course settings">
        <EditTextPreference
                android:key="edittext_preference"
                android:title="Share your Course settings with a friend"
                android:summary="Share your Course settings with a friend who takes same courses and units as you"
                android:dialogTitle="Share your settings" />
    </PreferenceCategory>
</PreferenceScreen>