<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <TextView
        android:id="@+id/txtcolor"
        android:layout_width="2dp"
        android:layout_height="90dp"
        android:layout_above="@+id/txtTeacher"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/txtTimes" />

    <TextView
        android:id="@+id/txtTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtCodel"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/txtcolor"
        android:text="8:15-9:30"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtCodel"
        android:layout_below="@+id/txtCodel"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black_bg"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="18dp"
        android:layout_height="15dp"
        android:layout_alignBaseline="@+id/txtCodel"
        android:layout_alignBottom="@+id/txtCodel"
        android:layout_toRightOf="@+id/txtTimes"
        android:text="pm"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_above="@+id/txtTeacher"
        android:layout_alignLeft="@+id/txtTimes"
        android:src="@drawable/locate" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/txtTeacher"
        android:src="@drawable/social_person" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtCodel"
        android:src="@drawable/more" />

    <TextView
        android:id="@+id/txtCodel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView3"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#808080"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtTeacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLocation"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#696969"
        android:textSize="11sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTeacher"
        android:layout_below="@+id/txtTimes"
        android:text="TextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#696969"
        android:textSize="11sp"
        android:textStyle="normal" />

</RelativeLayout>