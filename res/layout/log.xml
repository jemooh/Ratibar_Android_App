<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#cccccc"
        android:orientation="vertical"
        android:padding="10dp" >

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignParentRight="true"
            android:background="#C0C0C0" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignParentTop="true"
            android:layout_marginTop="23dp"
            android:gravity="center"
            android:text="Ratibar"
            android:textColor="@color/ntv_blue"
            android:textSize="25dip"
            android:textStyle="bold"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/loginEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/view1"
            android:layout_marginTop="20dp"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/social_person"
            android:ems="10"
            android:hint="Reg No./Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_bg"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/loginPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginEmail"
            android:layout_alignRight="@+id/loginEmail"
            android:layout_below="@+id/loginEmail"
            android:layout_marginTop="22dp"
            android:background="@color/color_white"
            android:drawableLeft="@drawable/device_access_secure"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/black_bg" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginPassword"
            android:layout_alignRight="@+id/loginPassword"
            android:layout_below="@+id/loginPassword"
            android:layout_marginTop="15dp"
            android:background="#66996c"
            android:text="Login"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnLogin"
            android:layout_marginTop="19dp"
            android:padding="10dip"
             android:textColor="#e30000"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
